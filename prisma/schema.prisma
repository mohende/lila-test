generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SaleStatus {
  open
  closed
  cancelled
}

model Sale {
  id               Int        @id @default(autoincrement())
  shopifyOrderId   String     @unique
  status           SaleStatus @default(open)
  customerName     String
  numberOfProducts Int        @default(0)
  totalPrice       Float
  createdAt        DateTime   @default(now())
}
